            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/button_container"
                android:padding="20dp"
                android:clipToPadding="false"
                android:clipChildren="false">

                <com.yuyakaido.android.cardstackview.CardStackView
                    android:id="@+id/card_stack_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </com.yuyakaido.android.cardstackview.CardStackView>

                <TextView
                    android:id="@+id/acabouAviso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textSize="22sp"
                    android:visibility="gone"
                    android:text="Acabou! Volte mais tarde!"
                    android:textAllCaps="true"
                    android:layout_below="@+id/acabouDesc"
                    android:textColor="@color/Preto"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/acabouDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="13sp"
                    android:visibility="gone"
                    android:layout_below="@+id/botao_recarregar"
                    android:text="Não encontramos mais ninguém que você possa curtir."/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/botao_recarregar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:hapticFeedbackEnabled="true"
                    app:srcCompat="@drawable/ic_recarregar"
                    android:visibility="gone"
                    app:backgroundTint="#FFFFFF"
                    app:fabSize="mini"
                    app:rippleColor="#0288D1"/>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
