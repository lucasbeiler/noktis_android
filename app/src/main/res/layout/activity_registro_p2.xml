<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    tools:contxt=".UI.RegistroP2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="602dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.494"
        tools:layout_editor_absoluteX="0dp">


        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="359dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="16dp"
                        android:id="@+id/imagem_registro"
                        android:scaleType="centerCrop"
                        android:saveEnabled="true"
                        android:layout_centerHorizontal="true"
                        tools:ignore="ContentDescription"
                        fresco:roundAsCircle="true"/>

                    <com.jem.rubberpicker.RubberRangePicker
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/range_idade"
                        android:layout_below="@+id/limite_distancia"
                        app:minValue="18"
                        app:maxValue="60"
                        app:elasticBehavior="cubic"
                        app:dampingRatio="0.4"
                        app:stiffness="400"
                        app:stretchRange="36dp"
                        app:defaultThumbRadius="16dp"
                        app:normalTrackWidth="4dp"
                        app:highlightTrackWidth="8dp"
                        app:normalTrackColor="#AAAAAA"
                        app:highlightTrackColor="#BA1F33"
                        app:highlightDefaultThumbOnTouchColor="#CD5D67"/>


                    <TextView
                        android:id="@+id/range_atual_idade"
                        android:layout_below="@+id/range_idade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColor="#000"
                        android:textSize="11sp"
                        android:textStyle="bold" />


                    <com.jem.rubberpicker.RubberSeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/limite_distancia"
                        android:layout_below="@+id/imagem_registro"
                        app:minValue="0"
                        app:maxValue="300"
                        app:elasticBehavior="cubic"
                        app:dampingRatio="0.3"
                        app:stiffness="300"
                        app:stretchRange="24dp"
                        app:defaultThumbRadius="16dp"
                        app:normalTrackWidth="4dp"
                        app:highlightTrackWidth="8dp"
                        app:normalTrackColor="#AAAAAA"
                        app:highlightTrackColor="#BA1F33"
                        app:highlightDefaultThumbOnTouchColor="#CD5D67"/>
                <TextView
                    android:id="@+id/limite_atual_distancia"
                    android:layout_below="@+id/limite_distancia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:textColor="#000"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                </RelativeLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_entrada_texto4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cidade_registro2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:focusableInTouchMode="true"
                        android:background="@drawable/campos_texto_arredondados"
                        app:drawableStartCompat="@drawable/ic_descricao"
                        android:hint="Informe sua cidade"
                        android:drawablePadding="2dp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        app:errorEnabled="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/dataNascimentoTxt"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    app:drawableEndCompat="@drawable/ic_editar"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/registrar"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/botoes_arredondados"
                    android:elevation="7dp"
                    android:text="@string/continuar"
                    android:translationZ="4dp" />

                <TextView
                    android:id="@+id/cancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="32dp"
                    android:layout_marginTop="3dp"
                    android:text="@string/cancelar_registro" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="22dp"
                    android:layout_marginTop="3dp" />

                <com.github.ybq.android.spinkit.SpinKitView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/barraLoading"
                    style="@style/SpinKitView.Small.DoubleBounce"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="20dp"
                    app:SpinKit_Color="#1dd648"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:SpinKit_Style="DoubleBounce"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>